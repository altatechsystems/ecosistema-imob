rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserTenantId() {
      return get(/databases/$(database)/documents/brokers/$(request.auth.uid)).data.tenant_id;
    }

    function belongsToUserTenant() {
      return isAuthenticated() &&
             resource.data.tenant_id == getUserTenantId();
    }

    // Default: deny all (será configurado em produção)
    match /{document=**} {
      allow read, write: if false;
    }

    // Regras temporárias para desenvolvimento
    // TODO: Implementar regras granulares antes do deploy produção

    // Tenants - apenas leitura pelo owner
    match /tenants/{tenantId} {
      allow read: if isAuthenticated() && getUserTenantId() == tenantId;
      allow write: if false; // Apenas admin pode alterar
    }

    // Brokers - leitura pelo tenant
    match /brokers/{brokerId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == brokerId ||
        belongsToUserTenant()
      );
      allow write: if isAuthenticated() && request.auth.uid == brokerId;
    }

    // Properties - leitura pelo tenant, escrita por brokers autorizados
    match /properties/{propertyId} {
      allow read: if isAuthenticated() && belongsToUserTenant();
      allow create: if isAuthenticated() &&
                       request.resource.data.tenant_id == getUserTenantId();
      allow update, delete: if isAuthenticated() && belongsToUserTenant();
    }

    // Listings - leitura pelo tenant
    match /listings/{listingId} {
      allow read: if isAuthenticated() && belongsToUserTenant();
      allow write: if isAuthenticated() && belongsToUserTenant();
    }

    // Leads - leitura e escrita pelo tenant
    match /leads/{leadId} {
      allow read: if isAuthenticated() && belongsToUserTenant();
      allow create: if true; // Leads podem vir de fontes públicas
      allow update: if isAuthenticated() && belongsToUserTenant();
      allow delete: if false; // Leads não devem ser deletados (LGPD: anonimizar)
    }

    // Owners - leitura pelo tenant
    match /owners/{ownerId} {
      allow read: if isAuthenticated() && belongsToUserTenant();
      allow write: if isAuthenticated() && belongsToUserTenant();
    }

    // Activity Logs - apenas leitura, escrita pelo sistema
    match /activity_logs/{logId} {
      allow read: if isAuthenticated() && belongsToUserTenant();
      allow write: if false; // Apenas o backend pode escrever logs
    }

    // Property Broker Roles - gerenciamento de vínculos
    match /property_broker_roles/{roleId} {
      allow read: if isAuthenticated() && belongsToUserTenant();
      allow write: if isAuthenticated() && belongsToUserTenant();
    }
  }
}
